_powerstat()
{
	local cur prev
	_init_completion || return

	case "$prev" in
	'-d')   COMPREPLY=( $(compgen -W "delay" -- $cur) )
		return 0
		;;
	'-i')   COMPREPLY=( $(compgen -W "threshold" -- $cur) )
		return 0
		;;
	esac

	case "$cur" in
                -*)
                        OPTS="-a -b -c -d -D -f -g -h -H -i -n -p -r -R -s -S -t -z"
                        COMPREPLY=( $(compgen -W "${OPTS[*]}" -- $cur) )
                        return 0
                        ;;
        esac
	return 0
}

# load the completion
complete -F _powerstat powerstat
